
.layout-table-paging { margin: -10px 0 0 0 ; border: 1px solid #e6e6e6; border-top: none; padding: 10px 10px 0 10px; }
.layout-table-paging .layui-laypage { margin: 0;  user-select: none;}
.layout-table-paging .layui-laypage .layui-laypage-curr .layui-laypage-em { background:#3c8deb ;}
.layout-table-paging .layui-laypage a:hover { color: #3c8deb;}


.layoutForIfream { width: 100%; height: 100%; position: relative;}
.trackstatus { width: 50px;font-size: 14px; display: inline-block; border-radius: 8px; background: #3c8deb; color: white;}
.trackstatus i { display: inline-block; width: 12px; height: 12px;}

/* select */
.form_select { width: 100%; height: 30px; padding-top: 5px; position: relative; }
/* .form_select.normal{width: 250px;}
.form_select.middle{width: 350px;}
.form_select.block{width: 550px;} */
.form_select .form_select_nameBox { width: 100%; transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s; height: 28px; line-height: 28px; color: #666; position: relative;  background: #fff;  border: 1px solid #e6e6e6;}
.form_select .form_select_name {position: absolute;top: 0px;left: 15px;bottom: 0px;right: 28px;line-height: 28px;font-size: 14px;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;font-size: 13px;}
.form_select .form_select_nameBox span { position: absolute; display: block; top: 0px; width: 33px; right: 0px; height: 28px; line-height: 28px; text-align: center;  }
/* .form_select.active .form_select_nameBox{ border-color:#666 !important;} */
.form_select.active .form_select_nameBox span { color: #66afe9; }
.form_select.active .form_select_name { color: #666 !important;}
.form_select.active .form_select_nameBox { border-color: #66afe9; outline: 0; }
.form_select .form_select_optionBox { display: none; min-width: 100%; position: absolute; top: 35px; z-index: 3; background: #fff;  right: -2px; border: 1px solid #ccc; max-height: 300px; overflow-y: auto;}
.form_select .form_select_option { cursor: pointer; height: 30px; line-height: 30px; font-size: 13px; padding: 0 12px; white-space: nowrap;overflow: hidden;text-overflow: ellipsis;font-size: 13px; color: #666;}
.form_select .form_select_option:hover { background: #e4e4e4;color: #666; }
.form_select .form_select_option.active { background: #1e90ff;color: #fff; }

